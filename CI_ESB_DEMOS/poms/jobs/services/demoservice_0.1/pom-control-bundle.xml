<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.example.ci_esb_demos.service</groupId>
    <artifactId>DemoService</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <relativePath>/</relativePath>
  </parent>
  <groupId>org.example.ci_esb_demos.service</groupId>
  <artifactId>DemoService-control-bundle</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <name>CI_ESB_DEMOS DemoService-0.1.0-SNAPSHOT (0.1,Services) Control Bundle</name>
  <properties>
    <cloud.publisher.skip>true</cloud.publisher.skip>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <excludes>
          <exclude>**/feature.xml</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <extensions>true</extensions>
        <configuration>
          <archive>
            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
